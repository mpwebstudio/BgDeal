                                    <span style="color: #428bca">Здравей @User.Identity.Name</span>
                                    
                                    
                                </span>
                                    <div id="userbar-login" style="top: 48px; display: none; opacity: 1;z-index:30000; padding:10px;">

                                        <a href="/Profile/Messages/@User.Identity.Name">Поща</a><br />
                                        <a href="/Profile/UserDetails/@User.Identity.Name">Профил</a><br />
                                        <a href="/Profile/AllDeals">Обяви</a><br />

                                    </div>
                                
                                </div>
                            </div>
                        
                        }
                }
                else
                {
                    
                <div class="row" style="margin-left:0px;">
                    
                        @Html.ActionLink("Регистрация", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })
                    
                    <div class="menu-login-display" id="menu-login-display" onmouseover="document.getElementById('userbar-login').style.display = 'block';" onmouseout="    document.getElementById('userbar-login').style.display = 'none';">
                        
                            <span style="padding:10px; padding-bottom:20px;">
                                @Html.ActionLink("Вход", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })
                            </span>
                        
                        <div id="userbar-login" style="top: 48px; display: none; opacity: 1;z-index:30000;">
                            
                            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                            {
                                @Html.AntiForgeryToken()
                                
                                
                                <div class="form-group">
                                    
                                    <div align="center" style="margin-top:10px; padding:10px;">
                                        <input type="text" placeholder="Потребителско име" id="UserName" name="username">
                                
                                    </div>
                                    <div class="clear"></div>
                                    <div align="center" style="margin-top:10px;">
                                        <input type="password" placeholder="Парола" id="Password" autocapitalize="off" autocorrect="off" name="password">
                                        
                                    </div>
                                    <div class="clear"></div>
                                    <div align="center" style="margin-top:10px;">
                                        Запомни ме <input type="checkbox" name="RememberMe" id="RememberMe" style="width:20px;" />


                                    </div>
                                </div>
                                <div class="form-group">
                                    <div align="center" style="margin-top:10px; margin-bottom:10px;">
                                        <input type="submit" value="Вход" class="btn btn-default" />
                                    </div>
                                </div>
                             
