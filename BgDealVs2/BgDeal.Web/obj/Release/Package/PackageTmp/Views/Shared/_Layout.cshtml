                <div class="col-lg-2" style="padding:8px;margin-left:15px;">
                    @using (Html.BeginForm("Search", "Home", FormMethod.Post))
                    {
                        @(Html.Kendo()
                            .AutoComplete() // разрешаваме аутокомпиита
                            .Name("DealSearch") // името на инпут полето което подаваме на SubmitSearchModel
                            .DataTextField("Title") //Името на полето за което правим анонимната функция в контролера
                            .MinLength(3)//минимум 3 букви за да сработи аутокомплиита
                            .Placeholder("Търси..")//какво да се изписва в полето
                            .DataSource(data =>
                            {
                                data.Read(read =>
                                    {
                                        read.Action("GetDealData", "Home") // от къде ще вземаме данните за аутокомпийта
                                            .Data("onAdditionalData");
                                    })
                                    .ServerFiltering(true);
                            })
