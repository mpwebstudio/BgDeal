                {
                    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm"}))
                        {
                        @Html.AntiForgeryToken()

                          <div class="row" style="margin-left:0px;">        
                            <a href="javascript:document.getElementById('logoutForm').submit()">Изход</a>
                            <div class="menu-login-display-2" id="menu-login-display-2" onmouseover ="document.getElementById('userbar-login').style.display = 'block';" onmouseout="document.getElementById('userbar-login').style.display = 'none';">
